<idea-plugin version="2">
  <name>FitNesse IDEA</name>
  <description>${project.description}</description>
  <version>${project.version}</version>
  <vendor>George Shakhnazaryan</vendor>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
  </project-components>

  <module-components>
  </module-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="com.gshakhn.idea.idea.fitnesse.lang.filetype.FitnesseFileTypeFactory"/>
    <syntaxHighlighter key="Fitnesse" implementationClass="com.gshakhn.idea.idea.fitnesse.lang.highlighting.FitnesseHighlighter"/>
    <colorSettingsPage implementation="com.gshakhn.idea.idea.fitnesse.lang.highlighting.FitnesseColorSettingsPage"/>
    <lang.parserDefinition language="Fitnesse" implementationClass="com.gshakhn.idea.idea.fitnesse.lang.parser.FitnesseParserDefinition"/>
    <lang.elementManipulator forClass="com.gshakhn.idea.idea.fitnesse.lang.psi.WikiLink"
                             implementationClass="com.gshakhn.idea.idea.fitnesse.lang.manipulator.WikiLinkManipulator"/>
    <lang.elementManipulator forClass="com.gshakhn.idea.idea.fitnesse.lang.psi.FixtureClass"
                             implementationClass="com.gshakhn.idea.idea.fitnesse.lang.manipulator.FixtureClassManipulator"/>

    <lang.elementManipulator forClass="com.gshakhn.idea.idea.fitnesse.decisiontable.DecisionInput"
                             implementationClass="com.gshakhn.idea.idea.fitnesse.decisiontable.DecisionInputManipulator"/>
    <lang.elementManipulator forClass="com.gshakhn.idea.idea.fitnesse.decisiontable.DecisionOutput"
                               implementationClass="com.gshakhn.idea.idea.fitnesse.decisiontable.DecisionOutputManipulator"/>

    <lang.elementManipulator forClass="com.gshakhn.idea.idea.fitnesse.querytable.QueryOutput"
                             implementationClass="com.gshakhn.idea.idea.fitnesse.querytable.QueryOutputManipulator"/>

    <lang.elementManipulator forClass="com.gshakhn.idea.idea.fitnesse.scripttable.ScriptRow"
                             implementationClass="com.gshakhn.idea.idea.fitnesse.scripttable.ScriptRowManipulator"/>

    <gotoFileContributor implementation="com.gshakhn.idea.idea.fitnesse.navigation.FitnesseFileNameContributor"/>

    <annotator language="Fitnesse" implementationClass="com.gshakhn.idea.idea.fitnesse.lang.psi.MissingReferencesAnnotator"/>

    <usageTypeProvider implementation="com.gshakhn.idea.idea.fitnesse.lang.psi.FitNesseUsageTypeProvider" />
    
    <!-- TODO: Need something like code inspections-->
    <!--
    <referencesSearch implementation="org.jetbrains.plugins.cucumber.java.steps.search.CucumberJavaStepDefinitionSearch"/>
    <methodReferencesSearch implementation="org.jetbrains.plugins.cucumber.java.steps.search.CucumberJavaMethodUsageSearcher"/>

     * Allows to disable highlighting of certain elements as unused when such elements are not referenced
     * from the code but are referenced in some other way (for example, from generated code).

    <implicitUsageProvider implementation="org.jetbrains.plugins.cucumber.java.steps.reference.CucumberJavaImplicitUsageProvider"/>

    <localInspection language="JAVA" shortName="CucumberJavaStepDefClassIsPublic" displayName="Step definition class is not public"
                     groupBundle="org.jetbrains.plugins.cucumber.java.CucumberJavaBundle" groupKey="cucumber.java.inspection.group.name" enabledByDefault="true"
                     level="WARNING" implementationClass="org.jetbrains.plugins.cucumber.java.inspections.CucumberJavaStepDefClassIsPublicInspections"/>
    -->
  </extensions>
</idea-plugin>
